<main class="container">
        <div class="row">
        <div class="col-4">
        <h3 class="mb-3">Clients</h3>

      </div>
        <div class="col-6">

      </div>
        <div class="col-2">
        <%= link_to 'Back', clients_path, class: "w-10 btn btn-outline-dark btn-sm", style: 'float: right'%>
      </div>
      </div>

<table class="table table-striped table-hover">
 <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Email</th>
      <th scope="col">CP #</th>
      <th scope="col">User Id</th>
      <th scope="col"><div class="float-end">Action</div></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @client.id %></td>
        <td><%= @client.name %></td>
        <td><%= @client.address %></td>
        <td><%= @client.email %></td>
        <td><%= @client.cp_number %></td>
        <td><%= @client.user_id %></td>
        <td><div class="float-end"><%= link_to 'Edit', edit_client_path(@client), class: "w-10 btn btn-outline-info btn-sm" %>
       </td>
      </tr>
</table>


<%= render 'clients/footer'%>
