<br>
<%= link_to 'New Client', new_client_path, class: "w-10 btn btn-outline-info btn-md float-end"%>
<br>
<br>
<table class="table table-striped table-hover">
 <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Email</th>
      <th scope="col">CP #</th>
      <th scope="col"><div class="float-end">Action</div></th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.address %></td>
        <td><%= client.email %></td>
        <td><%= client.cp_number %></td>
        <td><%= client.user_id %></td>
        <td><div class="float-end"><%= link_to 'Show', client, class: "w-10 btn btn-outline-dark btn-sm" %>
        <%= link_to 'Edit', edit_client_path(client), class: "w-10 btn btn-outline-dark btn-sm" %>
        <%= link_to 'Delete', client, class: "w-10 btn btn-outline-dark btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></div></td>
      </tr>
    <% end %>
</table>


