<main class="container">
  <div class="max-w-md my-10 m-auto p-12 lg:p-16 bg-white rounded border border-grey-light shadow">
<br>

<div style="padding-left: 10px; padding-right: 10px;">

        <div class="row">
        <div class="col-4">
        <h3 class="mb-3">Clients</h3>

      </div>
        <div class="col-6">

      </div>
        <div class="col-2">
        <%= link_to 'Back', meetings_path, class: "w-10 btn btn-outline-dark btn-sm", style: 'float: right'%>
      </div>
      </div>

<table class="table table-striped table-hover">
 <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Client Name</th>
      <th scope="col">Start Date</th>
      <th scope="col">End Date</th>
      <th scope="col">Lawyer.id</th>
      <th scope="col"><div class="float-end">Action</div></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @meeting.id %></td>
        <td><%= @meeting.client_name %></td>
        <td><%= @meeting.start_time %></td>
        <td><%= @meeting.end_time %></td>
        <td><%= @meeting.user_id %></td>
        <td><div class="float-end"><%= link_to 'Edit', edit_meeting_path(@meeting), class: "w-10 btn btn-outline-info btn-sm" %>
       </td>
      </tr>
</table>
</div>
</main>
