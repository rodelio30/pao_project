<main class="container" >
  <div class="max-w-md my-10 m-auto p-12 lg:p-16 bg-white rounded border border-grey-light shadow">
<br>

<div style="padding-left: 10px; padding-right: 10px;">
<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="nav-link active" id="home-tab" data-bs-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Active Clients</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="profile-tab" data-bs-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">On Progress Clients</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
    <h2 style="padding: 20px; padding-bottom: 0;">Meeting Calendar</h2>
      <div id="meeting-calendar" style="padding: 20px;">
        <%= render "calendar", meetings: meetings %>
      </div>
      </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
<h1> Meetings </h1>

    <% meetings.each do |meeting| %>
      <div class="flex flex-wrap items-center justify-start p-4 border-b border-grey-light mb-6">
        <div class="flex-1 flex justify-between">
          <div>
            <%= link_to meeting.client_name, meeting, class: "link mr-4" %>
          </div>
          <div>
            <%= readable_time(meeting.start_time) %> &dash;
            <%= readable_time(meeting.end_time) %>
          </div>
        </div>
      </div>
      <%= link_to "Cancel Meeting", meeting, method: :delete, data: { confirm: "Are you sure? There are no refunds."}, class: "btn btn-destroy ml-4" %>
    <% end %>
  </div>
 </div>
</div>
</div>
</div>
<%= render 'clients/footer'%>
